extends layouts/main

block content
    .video__player
        video(src=`/${video.fileUrl}`,control='true')
    .video__info
        a(href=routes.editVideo(video.id))
            button 영상 수정
        h5.video__title=video.title
        p.video__description=video.description
        if video.views === 1
            span.video__views 조회수 1
        else
            span.video__views 조회수 #{video.views}
    .video__comments
        if video.comments.length === 1
            span.video__comment-number 댓글 1
        else
            span.video__comment-number 댓글 #{video.comments.length}
        